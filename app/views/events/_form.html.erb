<%= form_with(model: event, html: { class: "row g-3"}) do |form| %>
  <% if event.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h5>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :user_id, value: current_user.id %>

  <div class="col-md-12">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="col-md-12">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="col-md-12">
    <%= form.label :date, class: "form-label" %>
    <%= form.datetime_field :date, class: "form-control" %>
  </div>

  <div class="col-md-12">
    <%= form.label :location, class: "form-label" %>
    <%= form.text_field :location, class: "form-control" %>
  </div>

  <div class="col-12">
    <%= form.submit "#{params[:action] == "edit" ? "Edit" : "Create"} Event", class: "btn btn-primary" %>
  </div>
<% end %>
