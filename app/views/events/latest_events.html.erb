<h3>Latest Events</h3>

<div id="events">
  <% if events.count > 0 %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Date</th>
          <th scope="col">Location</th>
          <th scope="col">Organizer</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% events.each do |event| %>
          <%= render event %>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>There are currently no events.</p>
  <% end %>
</div>

<%= link_to "See all events", events_path %>