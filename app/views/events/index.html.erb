<h1>Events</h1>

<div id="events">
  <% if @events.count > 0 %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Date</th>
          <th scope="col">Location</th>
          <th scope="col">Organizer</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <%= render event %>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>There are currently no events.</p>
  <% end %>
</div>

<%= link_to new_event_path, class: "btn btn-primary" do %>
  <i class="bi bi-patch-plus-fill"></i> Create new event
<% end %>